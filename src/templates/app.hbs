<p>Loaded File: <span id="soundName"></span><p>
<button id="play-btn" onclick="app.playSound()" disabled title="play"><i class="actie fa fa-play"></i></button>
<button id="stop-btn" onclick="app.stopSound()" disabled title="stop"><i class="fa fa-stop"></i></button>
<button id="loop-btn" class="active" onclick="app.toggleSoundLoop()" disabled title="loop"><i class="fa fa-undo"></i></button>
<button id="add-btn" onclick="app.addSound()" title="add"><i class="fa fa-plus"></i></button>
<input id="soundToLoad" onchange="app.loadSound()" type="file"><br><br>
<span>Speed </span><input id='playback-slider' type="range" min="0.2" max="4" value="1" step="0.1" oninput="app.setPlaybackSpeed()" style='width: 150px'><span id='playback-speed'>1</span><br>
<span>Left </span><input id='balance-slider' style="margin-left: 15px; width: 150px" type="range" min="-1" max="1" value="0" step="0.1" oninput="app.setBalance()"><span>Rirght</span>
<hr>

<span>select effect:</span>
<select id="effects-selector" onchange="app.addEffect(event)">
  <option value="none">none</option>
  {{#each effects}}
    <option value="{{@key}}">{{@key}}</option>
  {{/each}}
</select>

<div id="effects">


</div>